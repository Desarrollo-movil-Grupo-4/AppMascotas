<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4210C0E7"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="318dp"
        android:layout_height="590dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="88dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="Bienvenido"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            android:textColor="#086791"
            android:textSize="48sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="87dp"
            android:layout_height="85dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="30"
            android:layout_marginBottom="30"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_redondo"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:padding="10"
            android:selectAllOnFocus="false"
            android:singleLine="false" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15"
            android:background="@drawable/text_redondo"
            android:ems="10"
            android:hint="Correo"
            android:inputType="textEmailAddress"
            android:padding="10"
            android:singleLine="false" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15"
            android:background="@drawable/text_redondo"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPersonName"
            android:padding="10" />

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15"
            android:background="@drawable/text_redondo"
            android:ems="10"
            android:hint="Confirmar contraseña"
            android:inputType="textPersonName"
            android:padding="10" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30"
            android:background="@drawable/boton_redondo"
            android:text="Registrarse"
            android:textColor="@color/white"
            app:backgroundTint="#69CF13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:paddingTop="10">

            <Button
                android:id="@+id/button2"
                android:background="@drawable/boton_redondo"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10"
                android:layout_marginRight="10"
                android:layout_weight="1"

                android:text="ingresar con facebook"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10"
                android:layout_marginLeft="10"
                android:layout_weight="1"
                android:background="@drawable/boton_redondo"
                android:shadowRadius="10 dp"
                android:text="ingresar con google"
                android:textColor="@color/white"
                app:backgroundTint="#FF3D00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="202dp"
            android:layout_height="41dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ya está registrado?" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ingresar"
                android:textColor="#051A8C" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>