<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6110C0E7"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".views.InicioActivityView">

    <TextView
        android:id="@+id/nomPerfil"
        android:layout_width="301dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/cat"
        android:gravity="center|left"
        android:onClick="goToPerfil"
        android:paddingLeft="25dp"
        android:text="Pepito Perez"
        android:textColor="#009688"
        android:textSize="34sp"
        android:textStyle="bold"
        app:drawableTint="#009688"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="60dp" />

    <TextView
        android:id="@+id/buscar"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:width="50dp"
        android:height="50dp"
        android:background="@drawable/border_radius"
        android:gravity="left"
        android:padding="10dp"
        android:text="Buscar"
        android:textSize="24sp"
        android:drawableRight="@drawable/ic_baseline_search_24"/>

    <Button
        android:id="@+id/general"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/border_radius"
        android:drawableRight="@drawable/dog"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:onClick="goToServiciolocal"
        android:paddingRight="30dp"
        android:text="Clinica general"
        android:textColor="@color/white"
        android:textColorHighlight="#F3FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#009688"
        app:drawableTint="@color/white" />

    <Button
        android:id="@+id/odontologia"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/border_radius"
        android:drawableRight="@drawable/cat"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:onClick="goToServiciolocal"
        android:paddingRight="30dp"
        android:text="Odontología"
        android:textColor="@color/white"
        android:textColorHighlight="#F3FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#009688"
        app:drawableTint="@color/white" />

    <EditText
        android:id="@+id/cirugia"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/border_radius"
        android:drawableRight="@drawable/cow"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:onClick="goToServiciolocal"
        android:paddingRight="30dp"
        android:text="Cirugía"
        android:textColor="@color/white"
        android:textColorHighlight="#F3FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#009688"
        app:drawableTint="@color/white" />

    <EditText
        android:id="@+id/rayos"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/border_radius"
        android:drawableRight="@drawable/horse_variant"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:onClick="goToServiciolocal"
        android:paddingRight="30dp"
        android:text="Rayos X"
        android:textColor="@color/white"
        android:textColorHighlight="#F3FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#009688"
        app:drawableTint="@color/white" />

    <EditText
        android:id="@+id/banos"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/border_radius"
        android:drawableRight="@drawable/dog"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:onClick="goToVeterinaria"
        android:paddingRight="30dp"
        android:text="Baños y Peluquería"
        android:textColor="@color/white"
        android:textColorHighlight="#F3FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#009688"
        app:drawableTint="@color/white" />

    <EditText
        android:id="@+id/guarderia"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/border_radius"
        android:drawableRight="@drawable/cat"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:onClick="goToServiciolocal"
        android:paddingRight="30dp"
        android:text="Guarderia"
        android:textColor="@color/white"
        android:textColorHighlight="#F3FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#009688"
        app:drawableTint="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/button"
            android:layout_width="74dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:drawableRight="@drawable/map_marker_radius"
            android:onClick="goToLocalizacion"
            app:backgroundTint="@color/white"
            app:drawableTint="#009688"
            app:iconGravity="end" />

        <Button
            android:id="@+id/button3"
            android:layout_width="74dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:drawableRight="@android:drawable/ic_dialog_info"
            app:backgroundTint="@color/white"
            app:drawableTint="#009688"
            app:iconGravity="start|end" />

        <Button
            android:id="@+id/button2"
            android:layout_width="74dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:drawableRight="@drawable/dog"
            android:gravity="center"
            app:backgroundTint="@color/white"
            app:drawableTint="#009688"
            app:iconGravity="start|end" />
    </LinearLayout>


</LinearLayout>