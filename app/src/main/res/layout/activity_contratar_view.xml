<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6110C0E7"
    android:orientation="vertical"
    tools:context=".views.ContratarActivityView">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="195dp"
            android:layout_height="171dp"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/fredo_y_max"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="53dp" />

        <TextView
            android:id="@+id/nom_vet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center|center_horizontal"
            android:text="Nombre de la veterinaria"
            android:textColor="#017F8D"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/nom_masc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/border_radius"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Tu Nombre"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/Mascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/border_radius"
        android:ems="10"
        android:hint="Tipo de mascota"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/nom_mascotas"
        android:layout_width="wrap_content"
        android:layout_height="264dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/border_radius"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:gravity="left"
        android:hint="Dejanos tu mensaje"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/buttom_round"
        android:padding="8dp"
        android:text="Enviar"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#17B556" />
</LinearLayout>