<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6110C0E7"
    android:orientation="vertical"
    tools:context=".views.ContratarActivityView">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp">

        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp">


        <ImageView
            android:id="@+id/image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/fredo_y_max"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="53dp" />

        <TextView
            android:id="@+id/nomVet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center|center_horizontal"
            android:text="@string/text_nom_vet"
            android:textColor="#017F8D"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/nom_masc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/border_radius"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="@string/text_nombre"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/Mascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/border_radius"
        android:ems="10"
        android:hint="@string/text_tipo_mascota"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/nom_mascotas"
        android:layout_width="wrap_content"
        android:layout_height="182dp"
        android:layout_gravity="center"
        android:background="@drawable/border_radius"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:gravity="left"
        android:hint="@string/text_mensaje"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/buttom_round"
        android:onClick="goToResummen"
        android:padding="8dp"
        android:text="@string/text_enviar"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#17B556" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/map_marker_radius"
            android:drawablePadding="12dp"
            android:gravity="center|start"
            android:text="@string/text_direccion"
            android:textColor="#009688"
            android:textSize="24sp"
            android:textStyle="bold"
            app:drawableTint="#009688" />

        <TextView
            android:id="@+id/telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/phone_in_talk"
            android:drawablePadding="10dp"
            android:gravity="center|start"
            android:text="@string/num_telefono"
            android:textColor="#009688"
            android:textSize="24sp"
            android:textStyle="bold"
            app:drawableTint="#009688" />

        <TextView
            android:id="@+id/telefono2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/at"
            android:drawablePadding="10dp"
            android:gravity="center|start"
            android:text="@string/text_correo"
            android:textColor="#009688"
            android:textSize="24sp"
            android:textStyle="bold"
            app:drawableTint="#009688" />
    </LinearLayout>
</LinearLayout>